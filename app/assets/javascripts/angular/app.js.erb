'use strict'; // Make sure you don't have syntax errors

// var app = angular.module('appName', ['oneDependency']);
var app = angular.module('rails-instagram',['ngRoute', 'ng-token-auth']);

app.config(['$routeProvider', '$authProvider', function($routeProvider, $authProvider) {
  // Configure Angular Routes
  $routeProvider
    .when('/', {
      templateUrl: "<%= asset_path('static_pages/index.html') %>",
      controller: 'StaticPagesCtrl'
    })
    .when('/signup', {
      templateUrl: "<%= asset_path('auth/signup.html') %>",
      controller: 'SignUpCtrl'
    })
    .when('/posts', {
      templateUrl: "<%= asset_path('posts/index.html') %>",
      controller: 'PostsIndexCtrl'
    })
    .when('/posts/:id', {
      templateUrl: "<%= asset_path('posts/show.html') %>",
      controller: 'PostsShowCtrl'
    })
    .when('/new_posts', {
      templateUrl: "<%= asset_path('posts/new.html') %>",
      controller: 'PostsNewCtrl'
    })

  $authProvider.configure({
      // By default, you only need to configure apiUrl
      // Note that if you put a '/' at the end of the link, there will be errors when calling the api
      apiUrl: 'http://localhost:3000'
    })

}]);